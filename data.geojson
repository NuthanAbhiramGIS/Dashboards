<!DOCTYPE html>
<html>
<head>
    <title>ISS GeoJSON</title>
    <meta http-equiv="refresh" content="60"> <!-- Refresh every 60 seconds -->
</head>
<body>
    <pre id="geojson"></pre>
    <script>
        async function fetchISSData() {
            const response = await fetch('https://api.wheretheiss.at/v1/satellites/25544');
            const data = await response.json();
            const geojson = {
                "type": "FeatureCollection",
                "features": [
                    {
                        "type": "Feature",
                        "geometry": {
                            "type": "Point",
                            "coordinates": [data.longitude, data.latitude]
                        },
                        "properties": {
                            "name": "ISS",
                            "timestamp": new Date(data.timestamp * 1000).toISOString()
                        }
                    }
                ]
            };
            document.getElementById('geojson').textContent = JSON.stringify(geojson, null, 2);
        }

        fetchISSData();
        setInterval(fetchISSData, 60000);  // Fetch new data every 60 seconds
    </script>
</body>
</html>
